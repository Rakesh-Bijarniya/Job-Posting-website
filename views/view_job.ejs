            </div>
            <ul>
                <h3>requirements</h3>
                <li>education: <span>graduate</span></li>
                <li>age: <span>18+</span></li>
                <li>language: <span>hindi , english</span></li>
                <li>experience: <span>3+ years</span></li>
            </ul>
            <ul>
                <h3>qualifications</h3>
                <li>Bachelor's </li>
                <li>PHP: 1 year experience</li>
                <li>Web Design: Both Frontend and Backend</li>
                <li>WordPress: 1 year</li>
                <li>Total work: 3 years</li>
            </ul>
            <ul>
                <h3>skills</h3>
                <%for(let i = 0 ;i<jobs.rows[0].job_skills.length ; i++) {%>
                    <li><%=jobs.rows[0].job_skills[i]%></li>
                <%}%>                    
                
            </ul>
            <div class="description">
                <h3>job description</h3>
                <p>
                    <%=jobs.rows[0].job_description%>
                </p>
                <ul>
                    <li>Hiring 2 candidates for this role</li>
                    <li><%=time(jobs.rows[0].created_date)%></li>
                </ul>
            </div>
            <% let v = '/apply?jobId=' + jobs.rows[0].job_post_id ; %>
            <form action= <%=v%> method="post" class="flex-btn">
                <%if(count == 0){%>
                    <input type="submit" value="apply now" name="apply" id = "apply" class="btn" >
                <%}else{%>
                    <input type="submit" value="applied" name="apply" class="btn" disabled>
                <%}%>
                <!-- <button type = "submit"><i class="far fa-heart" class="save"><span>Save Job</span></i></button> -->
            </form>
        </div>


