     <section class="job-details">
        <h1 class="heading">job details</h1>
        <div class="details">
            <div class="jon-info">
                <h3><%=jobs.rows[0].title%></h3>
                <a href="view_company.html"><%=jobs.rows[0].company_name%></a>
                <p><i class="fa-solid fa-location-dot"></i>
                    <%for(let i = 0 ;i<jobs.rows[0].city.length ; i++) {%>
                        <%=jobs.rows[0].city[i]%>
                    <%}%> 
                </p>
            </div>
            <div class="basic-details">
                <h3>Salary</h3>
